<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".BunnixApplication"
        android:allowBackup="true"
        android:icon="@drawable/bunnix_2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bunnix_2"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bunnix.Splash">

        <activity
            android:name=".frontend.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".frontend.LoginActivity" />
        <activity android:name=".frontend.SignupActivity" />
        <activity android:name=".frontend.HomeActivity" />
        <activity android:name=".frontend.OnboardingActivity" />
        <activity android:name=".frontend.BookingActivity" />
        <activity android:name=".frontend.CartActivity" />

    </application>

</manifest>
